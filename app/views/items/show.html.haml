      #item-show
        %h3
          / = @item.quid(line_item.price)
          = @item.price
          = @item.price
        %hr

        .buttons
          .btn.lg.ghost
            = link_to "Placeholder", root_path
          / = @item.description
          %hr

        .aboutMessage
          %p About this product

          %i.fa.fa-stop-circle-o
            %p About this product

        .buttons
          .btn.md.ghost
            = link_to "Home", root_path
          .btn.md.ghost
            = link_to "Edit", edit_item_path(@item)
          .btn.md.ghost
            = link_to "Delete", item_path(@item), method: :delete, data: {confirm: "Are you sure?"}
        %hr

        .questionStyle
          %h4 Questions? Call us:
          %fa.fa-gratipay test
        .phoneStyle
          %h4 218-535-1760



